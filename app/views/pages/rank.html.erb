<% i = 1 %>

<div class="container">
  <div class="rank-container">

  <div class="row margin-bottom">

    <div class="col-xs-offset-1 col-xs-2">
      <h5><strong>Rank</strong></h5>
    </div>
    <div class="col-xs-4">
      <h5><strong>Nickname</strong></h5>
    </div>
    <div class="col-xs-offset-1 col-xs-2 midle">
      <h5><strong>Points</strong></h5>
    </div>
  </div>


  <div class="rank-body">

  <% @rank.each do |u| %>

  <div class="row border">
    <div class="col-xs-offset-1 col-xs-2 midle">
      <%= i %>
    </div>

      <div class="col-xs-4">
      <%= u.username %>
      </div>
      <div class="col-xs-offset-1 col-xs-2 midle">
      <%= u.score %>
      </div>
  </div>
    <% i += 1 %>
  <% end %>

  </div>
  </div>
</div>
