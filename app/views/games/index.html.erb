<div class="leagues-choice">
  <% leagues_array = League.all %>
  <% leagues_array.each do |league| %>
  <div class="<%= "underline" if params[:league].to_i == league.id %>">
    <%= link_to league.name, games_path(league: league) %>
  </div>
  <% end %>
</div>


<div class="games">
  <div class="title today-list">
    <h2>Live games</h2>
  </div>
  <div class="game-list match-list">
    <% if @games_1.count == 0 %>
    <h2 class='text-center'>No live games now</h2>
    <% else %>
    <% @games_1.each do |g| %>

    <div class="row">

      <div class='game-item'>
        <%= link_to game_chats_path(g) do %>
        <div class="col-xs-5 team-name">
          <div class="logo" style="background-image: url('<%= g.team_a.logo %>')"></div>
          <% if g.team_a.name.length <= 16 %>
          <p><%= g.team_a.name %></p>
          <% else %>
          <p><%= g.team_a.name[0..12] %>...</p>
          <% end %>
        </div>

        <div class="col-xs-2 datetime">
          <% if g.kick_off_time.to_date == Date.today %>
          <p><strong>Today</strong></p>
          <% elsif g.kick_off_time.to_date == Date.tomorrow %>
          <p><strong>Tomorrow</strong></p>
          <% else %>
          <p><strong><%= g.kick_off_time.strftime("%d-%b") %></strong></p>
          <% end %>
          <p><%= g.kick_off_time.strftime("%H:%M") %></p>
        </div>

        <div class="col-xs-5 team-name">
          <div class="logo" style="background-image: url('<%= g.team_b.logo %>')"></div>
          <% if g.team_b.name.length <= 16 %>
          <p><%= g.team_b.name %></p>
          <% else %>
          <p><%= g.team_b.name[0..12] %>...</p>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

  <div class="title today-list">
    <h2>Next games</h2>
  </div>
  <div class="game-list">
    <% @games_2.each do |g| %>
    <div class='game-item'>

      <div class="col-xs-5 team-name">
        <div class="logo" style="background-image: url('<%= g.team_a.logo %>')"></div>
        <% if g.team_a.name.length <= 16 %>
        <p><%= g.team_a.name %></p>
        <% else %>
        <p><%= g.team_a.name[0..13] %>...</p>
        <% end %>
      </div>

      <div class="col-xs-2 datetime">
        <% if g.kick_off_time.to_date == Date.today %>
        <p><strong>Today</strong></p>
        <% elsif g.kick_off_time.to_date == Date.tomorrow %>
        <p><strong>Tomorrow</strong></p>
        <% else %>
        <p><strong><%= g.kick_off_time.strftime("%d-%b") %></strong></p>
        <% end %>
        <p><%= g.kick_off_time.strftime("%H:%M") %></p>
      </div>

      <div class="col-xs-5 team-name">
        <div class="logo" style="background-image: url('<%= g.team_b.logo %>')"></div>
        <% if g.team_b.name.length <= 18 %>
        <p><%= g.team_b.name %></p>
        <% else %>
        <p><%= g.team_b.name[0..15] %>...</p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

