<div class="leagues-choice">
  <% leagues_array = League.all %>
  <% leagues_array.each do |league| %>
    <%= link_to league.name, games_path(league: league) %>
  <% end %>
</div>

<div class="games">
  <div class="title today-list">
    <h2>Live games</h2>
  </div>
  <div class="game-list match-list">
    <% @games.each do |g| %>
      <div class='game-item'>
        <%= link_to game_chats_path(g) do %>
        <% if @league.name == g.league.name && @date == g.kick_off_time.to_date && g.chats.first.online == true %>
          <div class="col-xs-4 team-name">
            <% if g.team_a.name.length <= 18 %>
              <p><%= g.team_a.name %></p>
            <% else %>
              <p><%= g.team_a.name[0..15] %>...</p>
            <% end %>
          </div>
          <div class="col-xs-1 logo" style="background-image: url('<%= g.team_a.logo %>')"></div>
          <div class="col-xs-2 datetime">
            <p style="font-size: 10px"><%= g.kick_off_time.strftime("%H:%M") %></p>
          </div>
          <div class="col-xs-1 logo" style="background-image: url('<%= g.team_b.logo %>')"></div>
          <div class="col-xs-4 team-name">
            <% if g.team_b.name.length <= 18 %>
            <p><%= g.team_b.name %></p>
            <% else %>
            <p><%= g.team_b.name[0..15] %>...</p>
            <% end %>
          </div>
        <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="title today-list">
    <h2>Next games</h2>
  </div>
  <div class="game-list">
      <% @games.each do |g| %>
    <div class='game-item'>
        <% old_game = g.kick_off_time.time - 60.minutes %>
        <% if @league.name == g.league.name && @date == g.kick_off_time.to_date && g.chats.first.online == false && old_game > @time%>
          <div class="col-xs-4 team-name">
            <% if g.team_a.name.length <= 18 %>
              <p><%= g.team_a.name %></p>
            <% else %>
              <p><%= g.team_a.name[0..15] %>...</p>
            <% end %>
          </div>
          <div class="col-xs-1 logo" style="background-image: url('<%= g.team_a.logo %>')"></div>
          <div class="col-xs-2 datetime">
            <p style="font-size: 10px"><%= g.kick_off_time.strftime("%H:%M") %></p>
          </div>
          <div class="col-xs-1 logo" style="background-image: url('<%= g.team_b.logo %>')"></div>
          <div class="col-xs-4 team-name">
            <% if g.team_b.name.length <= 18 %>
            <p><%= g.team_b.name %></p>
            <% else %>
            <p><%= g.team_b.name[0..15] %>...</p>
            <% end %>
          </div>
        <% end %>
    </div>
      <% end %>
  </div>
</div>
